@page
@model AdminModel
@{
    ViewData["Title"] = "Admin - Customer Management";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h1>Customer Management</h1>
            <p class="text-muted">Manage all customer accounts</p>
        </div>
        <div class="col-auto">
            <a href="/" class="btn btn-outline-secondary">Back to Home</a>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Add New Customer</h5>
        </div>
        <div class="card-body">
            <form method="post" asp-page-handler="AddCustomer" id="addCustomerForm">
                <div class="row">
                    <div class="col-md-5">
                        <div class="mb-3">
                            <label for="customerName" class="form-label">Name</label>
                            <input type="text" class="form-control" id="customerName" name="name" required>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="mb-3">
                            <label for="customerEmail" class="form-label">Email</label>
                            <input type="email" class="form-control" id="customerEmail" name="email" required>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">&nbsp;</label>
                        <button type="submit" class="btn btn-primary w-100">Add Customer</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Customer List</h5>
        </div>
        <div class="card-body">
            @if (Model.Customers.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Created At</th>
                                <th>Customer ID</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="customerTableBody">
                            @foreach (var customer in Model.Customers)
                            {
                                <tr class="customer-row" data-customer-id="@customer.Id">
                                    <td>@customer.Name</td>
                                    <td>@customer.Email</td>
                                    <td>@customer.CreatedAt.ToString("MMM dd, yyyy")</td>
                                    <td><code>@customer.Id</code></td>
                                    <td>
                                        <form method="post" asp-page-handler="LoginAsCustomer" class="d-inline">
                                            <input type="hidden" name="customerId" value="@customer.Id" />
                                            <button type="submit" class="btn btn-sm btn-primary">
                                                View Dashboard
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted">No customers found.</p>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/admin.js" asp-append-version="true"></script>
}
