@page
@model IndexModel
@{
    ViewData["Title"] = "CallFlow AI - AI Call Center for Your Business";
    Layout = "~/Pages/Shared/_LandingLayout.cshtml";
}

<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="hero-title">AI Call Center That Sounds Human</h1>
                <p class="hero-subtitle">Transform your customer service with intelligent AI agents for Restaurants, Real Estate, and Medical Practices</p>
                <div class="hero-cta">
                    <a href="/login" class="btn btn-primary btn-lg">Get Started</a>
                    <a href="#features" class="btn btn-outline-light btn-lg">Learn More</a>
                </div>
                <div class="hero-stats">
                    <div class="stat-item">
                        <div class="stat-number">24/7</div>
                        <div class="stat-label">Availability</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-number">10k+</div>
                        <div class="stat-label">Calls Handled</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-number">99%</div>
                        <div class="stat-label">Accuracy</div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-image">
                    <div class="floating-card">
                        <div class="card-content">
                            <div class="pulse-dot"></div>
                            <span>AI Agent Active</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="features" class="industry-section">
    <div class="container">
        <div class="section-header text-center">
            <h2>Tailored Solutions For Your Industry</h2>
            <p class="section-subtitle">Powerful AI agents designed specifically for your business needs</p>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="industry-card">
                    <div class="industry-icon restaurants">
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path d="M3 2v7c0 1.1.9 2 2 2h4a2 2 0 002-2V2M7 2v20M21 15V2v0a5 5 0 00-5 5v6c0 1.1.9 2 2 2h3zm0 0v7" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </div>
                    <h3>Restaurants</h3>
                    <p>Handle reservations, take orders, and answer menu questions instantly. Never miss a call during peak hours.</p>
                    <ul class="feature-list">
                        <li>Reservation management</li>
                        <li>Order taking & modifications</li>
                        <li>Menu inquiries</li>
                    </ul>
                </div>
            </div>
            <div class="col-md-4">
                <div class="industry-card">
                    <div class="industry-icon realestate">
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path d="M3 9l9-7 9 7v11a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            <path d="M9 22V12h6v10" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </div>
                    <h3>Real Estate</h3>
                    <p>Schedule showings, qualify leads, and provide property information 24/7 while you focus on closing deals.</p>
                    <ul class="feature-list">
                        <li>Property information</li>
                        <li>Showing scheduling</li>
                        <li>Lead qualification</li>
                    </ul>
                </div>
            </div>
            <div class="col-md-4">
                <div class="industry-card">
                    <div class="industry-icon medical">
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path d="M22 12h-4l-3 9L9 3l-3 9H2" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </div>
                    <h3>Medical Practices</h3>
                    <p>Book appointments, handle patient inquiries, and manage schedules with HIPAA-compliant AI assistance.</p>
                    <ul class="feature-list">
                        <li>Appointment scheduling</li>
                        <li>Patient reminders</li>
                        <li>Insurance verification</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="features-section">
    <div class="container">
        <div class="section-header text-center mb-5">
            <h2>Real Customer Conversations Powered by AI</h2>
            <p class="section-subtitle">Hear how our AI agents handle real calls with natural, human-like conversations</p>
        </div>

        <div class="row mb-5">
            <div class="col-lg-4 mb-4">
                <div class="call-card">
                    <div class="call-header">
                        <div class="call-icon restaurant-call">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path d="M3 2v7c0 1.1.9 2 2 2h4a2 2 0 002-2V2M7 2v20M21 15V2v0a5 5 0 00-5 5v6c0 1.1.9 2 2 2h3zm0 0v7" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </div>
                        <h5>Restaurant Reservation</h5>
                        <p class="call-description">AI agent handles dinner reservation request, confirms party size, time, and special requests</p>
                    </div>
                    <div class="call-transcript">
                        <div class="transcript-line customer-line">
                            <span class="speaker">Customer:</span>
                            <span class="text">Hi, I'd like to make a reservation for tonight</span>
                        </div>
                        <div class="transcript-line agent-line">
                            <span class="speaker">AI Agent:</span>
                            <span class="text">Of course! I'd be happy to help. How many guests will be joining you?</span>
                        </div>
                        <div class="transcript-line customer-line">
                            <span class="speaker">Customer:</span>
                            <span class="text">Four people, around 7 PM if possible</span>
                        </div>
                        <div class="transcript-line agent-line">
                            <span class="speaker">AI Agent:</span>
                            <span class="text">Perfect! I have availability at 7 PM for a party of four. May I have a name for the reservation?</span>
                        </div>
                        <div class="call-outcome">
                            <strong>Result:</strong> Reservation confirmed for 4 guests at 7:00 PM
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 mb-4">
                <div class="call-card">
                    <div class="call-header">
                        <div class="call-icon realestate-call">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path d="M3 9l9-7 9 7v11a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                <path d="M9 22V12h6v10" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </div>
                        <h5>Property Showing</h5>
                        <p class="call-description">AI schedules property viewing, qualifies lead, and syncs with agent's calendar</p>
                    </div>
                    <div class="call-transcript">
                        <div class="transcript-line customer-line">
                            <span class="speaker">Customer:</span>
                            <span class="text">I'm interested in the 3-bedroom listing on Oak Street</span>
                        </div>
                        <div class="transcript-line agent-line">
                            <span class="speaker">AI Agent:</span>
                            <span class="text">Great choice! That's a beautiful property. Are you looking to schedule a showing?</span>
                        </div>
                        <div class="transcript-line customer-line">
                            <span class="speaker">Customer:</span>
                            <span class="text">Yes, are you available tomorrow afternoon?</span>
                        </div>
                        <div class="transcript-line agent-line">
                            <span class="speaker">AI Agent:</span>
                            <span class="text">I have availability at 2 PM or 4 PM tomorrow. Which works better for you?</span>
                        </div>
                        <div class="call-outcome">
                            <strong>Result:</strong> Showing scheduled, lead captured in CRM
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 mb-4">
                <div class="call-card">
                    <div class="call-header">
                        <div class="call-icon medical-call">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path d="M22 12h-4l-3 9L9 3l-3 9H2" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </div>
                        <h5>Appointment Booking</h5>
                        <p class="call-description">AI books medical appointment, verifies insurance, and sends confirmation</p>
                    </div>
                    <div class="call-transcript">
                        <div class="transcript-line customer-line">
                            <span class="speaker">Customer:</span>
                            <span class="text">I need to schedule a checkup with Dr. Smith</span>
                        </div>
                        <div class="transcript-line agent-line">
                            <span class="speaker">AI Agent:</span>
                            <span class="text">I can help you with that. Do you have a preferred day this week?</span>
                        </div>
                        <div class="transcript-line customer-line">
                            <span class="speaker">Customer:</span>
                            <span class="text">Thursday morning would be ideal</span>
                        </div>
                        <div class="transcript-line agent-line">
                            <span class="speaker">AI Agent:</span>
                            <span class="text">I have an opening Thursday at 10:30 AM. I'll send you a confirmation text with all the details.</span>
                        </div>
                        <div class="call-outcome">
                            <strong>Result:</strong> Appointment booked, SMS confirmation sent
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="feature-content">
                    <h2>Seamless Integration</h2>
                    <p class="lead">Connect with your existing tools and workflows in minutes, not weeks.</p>
                    <ul class="benefit-list">
                        <li>Calendar sync (Google, Outlook, Apple)</li>
                        <li>CRM integration</li>
                        <li>Custom API connections</li>
                        <li>Real-time data updates</li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="integration-grid">
                    <div class="integration-badge">Google Calendar</div>
                    <div class="integration-badge">Salesforce</div>
                    <div class="integration-badge">Outlook</div>
                    <div class="integration-badge">HubSpot</div>
                    <div class="integration-badge">Zapier</div>
                    <div class="integration-badge">Custom API</div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="cta-section">
    <div class="container text-center">
        <h2>Ready to Transform Your Call Center?</h2>
        <p class="lead">Join hundreds of businesses already using CallFlow AI</p>
        <a href="/login" class="btn btn-light btn-lg">Start Free Trial</a>
    </div>
</section>
