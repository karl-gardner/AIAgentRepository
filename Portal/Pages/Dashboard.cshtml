@page
@model DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container">
    @if (!Model.IsLoggedIn)
    {
        <div class="row justify-content-center align-items-center min-vh-100">
            <div class="col-md-6">
                <div class="alert alert-warning text-center">
                    <h4>Access Denied</h4>
                    <p>Please login to access the dashboard.</p>
                    <a href="/login" class="btn btn-primary mt-3">Go to Login</a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row mb-4">
            <div class="col">
                <h1>Dashboard</h1>
                <p class="text-muted">Welcome, <strong>@Model.CurrentCustomerName</strong></p>
            </div>
            <div class="col-auto">
                <a href="/admin" class="btn btn-outline-secondary me-2">Admin Panel</a>
                <form method="post" asp-page-handler="Logout" class="d-inline">
                    <button type="submit" class="btn btn-outline-danger">Logout</button>
                </form>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-6">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Your Notes</h5>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-page-handler="SaveData" id="dashboardForm">
                            <div class="mb-3">
                                <label for="textContent" class="form-label">Enter your text:</label>
                                <textarea
                                    class="form-control"
                                    id="textContent"
                                    name="textContent"
                                    rows="8"
                                    placeholder="Type your notes here...">@Model.SavedText</textarea>
                            </div>
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary">Save</button>
                            </div>
                        </form>
                        @if (Model.LastUpdated.HasValue)
                        {
                            <p class="text-muted small mt-2">Last updated: @Model.LastUpdated.Value.ToString("MMM dd, yyyy 'at' h:mm tt")</p>
                        }
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Saved Content</h5>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(Model.SavedText))
                        {
                            <div class="saved-content-display">
                                <pre class="bg-light p-3 rounded">@Model.SavedText</pre>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No content saved yet. Enter text in the form and click Save.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/dashboard.js" asp-append-version="true"></script>
}
